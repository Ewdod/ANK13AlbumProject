@using ANK13AlbumProject.Entities;
@model Admin
<div class="w-25 card-body">
    <form asp-controller="Admin" asp-action="Register" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="UserName"></label>
            <input asp-for="UserName" type="text" class="form-control" />

        </div>

        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>


        <div>
            <label asp-for="PasswordConfirmation"></label>
            <input asp-for="PasswordConfirmation" type="password" class="form-control" />
        </div>
        <br />

        <button type="submit" class="btn btn-primary btn-block ">KAYIT OL</button>
        <a class="btn btn-info" asp-controller="Home" asp-action="Index">  ANA SAYFAYA DÖN </a>

    </form>
</div>
@{
    if (TempData["Hata"] != null)
    {
        <div class="container mt-3">
            <div class="mt-2 p-1 bg-danger text-white rounded">
                <h1>HATA!</h1>
                <p> @TempData["Hata"]</p>
            </div>
        </div>
    }
}
